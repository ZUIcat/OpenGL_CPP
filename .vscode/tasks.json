{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "isBackground": false,
            "promptOnClose": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "powershell",
            "args": [
                "-c",
                "mingw32-make"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build & run",
            "type": "shell",
            "isBackground": false,
            "promptOnClose": true,
            "command": "powershell",
            "args": [
                "-c",
                "'mingw32-make run'"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "isBackground": false,
            "promptOnClose": true,
            "command": "powershell",
            "args": [
                "-c",
                "'mingw32-make clean'"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}